{
  "files": [ "./src/index.ts", "./src/.d.ts"],
  "include": ["./src/lib"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [ "esnext", "DOM" ],
    "allowJs": true,
    "declaration": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node",
      "mocha"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
